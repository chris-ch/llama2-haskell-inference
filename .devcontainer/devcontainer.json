{
	"image": "ghcr.io/chris-ch/docker-ghcup:v1.0.3",
	"customizations": {
			"vscode": {
					"extensions": [
							"justusadam.language-haskell"
					]
			}
	},
	"remoteUser": "haskell",
	"mounts": [
		"source=${localEnv:HOME}/.ssh,target=/home/haskell/.ssh,type=bind,readonly",
		"source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
	]
}
